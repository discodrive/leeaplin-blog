---
import Layout from "./Layout.astro";

interface Props {
    frontmatter: {
        title: string;
        slug: string;
        date: string;
        tags: string;
    }
}

const { frontmatter } = Astro.props as Props;
---

<Layout title={frontmatter.title}>
    <h2 class="mb-4 ">{frontmatter.title}</h2>
    <h3 class="mt-0 text-base">{frontmatter.date}</h3>
    <slot />
</Layout>

<style is:global>
    h2 {
        @apply text-2xl
    }
    h3 {
        @apply text-xl
    }
    h2, h3 {
        @apply mb-8 mt-8 font-bold text-slate-700
    }
    ol {
        @apply list-decimal list-inside
    }
    ul {
        @apply list-disc list-inside
    }
    ol li {
        @apply mb-2
    }
    ol li ul {
        @apply mt-2
    }
    ol li ul li {
        @apply mb-0
    }
    p, ol, ul {
        @apply mb-6 font-sans
    }
    p code, ol code, ul code {
        @apply bg-stone-100 inline-block
    }
    p a {
        @apply underline text-sky-600
    }
    pre.astro-code {
        background-color:#202A3A !important;
        @apply mt-5 mb-8 first:mt-0 last:mb-0 p-5 rounded-xl shadow-lg overflow-hidden dark:ring-1 dark:ring-white/10 dark:ring-inset
    }
</style>
