---
interface Props {
    title: string;
    description: string;
    href: string;
    date: string;
    tags: string[];
}
const {title, description, href, date, tags} = Astro.props as Props;
---
<div class="post-item mb-10 pb-7 border-b-2">
    <a href={href} class="text-sky-700 hover:text-slate-600">
        <h2 class="text-2xl font-bold mb-4">{title}</h2>
        <h3 class="mt-0 mb-4 text-base">{date}</h3>
    </a>
    
    <div class="tags mb-4">
        {tags.map((tag) => (
            <a href={`/tags/${tag}`} class="mr-2 p-2 bg-slate-700 text-white text-xs">{tag}</a>
        ))}
    </div>

    <p class="mt-5">{description}</p>
</div>
